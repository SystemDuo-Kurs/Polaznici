<Window x:Class="Polaznici.Upis"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Polaznici"
        mc:Ignorable="d"
        Title="Upis" Height="450" Width="800" FontSize="24">
	<UniformGrid Columns="3">
		<ListBox Name="lbPolaznici"/>
		<StackPanel VerticalAlignment="Center">
			<Label Content="{Binding Path=Naziv}"/>
			<Button Name="tamo" Margin="0 30"/>
			<Button Name="ovamo"/>
		</StackPanel>
		<ListBox Name="lbUpisani"/>
	</UniformGrid>
</Window>
